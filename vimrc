set nocompatible

set backspace=indent,eol,start
set autoindent
set smartindent
set ts=4
set expandtab
set tabstop=8
set softtabstop=4
set shiftwidth=4

set number
set smartcase
set history=50
set ruler
set showcmd
set incsearch

set nobackup
set nowritebackup
set noswapfile

set clipboard=unnamed

:syntax on
:colorscheme desert
